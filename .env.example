# 本番環境用の環境変数テンプレート
# このファイルを .env にコピーして使用してください

# Flask設定
FLASK_ENV=production
SECRET_KEY=your_super_secret_key_here_change_this_immediately

# サーバー設定
HOST=0.0.0.0
PORT=8080
HTTPS_PORT=8443

# データベース
DB_PATH=/var/www/panzaiko/breads_full.db

# ログ設定
LOG_LEVEL=INFO
LOG_FILE=/var/log/panzaiko/app.log

# セキュリティ
DEBUG=False
ADMIN_PASSWORD=your_admin_password_here

# SSL証明書（Let's Encrypt推奨）
SSL_CERT_PATH=/etc/letsencrypt/live/yourdomain.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/yourdomain.com/privkey.pem

# 外部API
OPENWEATHER_API_KEY=048704ba0917b05a66dd010b71e9a7e1
